<h1>News</h1>

<%= link_to 'Create New News', new_news_path, class: 'btn btn-primary mb-3' %>

<div class="news-container">
  <% @news.each_slice(3) do |slice| %>
    <div class="row">
      <% slice.each do |news_item| %>
        <div class="card">
          <h3><%= news_item.title %></h3>
          <p><%= news_item.content %></p>
          <%= link_to 'Show', news_path(news_item), class: 'btn' %>
          <%= link_to 'Edit', edit_news_path(news_item), class: 'btn' %>
          <%= link_to 'Destroy', news_path(news_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>



